public class Hw2_2{
    public static void main(String[] arg) {
        int number = 123;
        int number1 = 0;
         while (number != 0) {
                number1 = number1 * 10 + number % 10;
                number /= 10;
            }
         int number2 = number1 - 123;
               System.out.println("number2 = " + number2);
    }
}
// результат выполнения
// number2 = 198
